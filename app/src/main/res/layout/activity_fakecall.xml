<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fakecall"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fakecall">

    <EditText
        android:id="@+id/etCallerName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter Caller Name"
        android:padding="10dp"
        android:background="@drawable/button_no"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="15dp" />

    <!-- Caller Number Input -->
    <EditText
        android:id="@+id/etCallerNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter Caller Number"
        android:padding="10dp"
        android:background="@drawable/button_no"
        android:inputType="phone"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginBottom="15dp" />

    <!-- Delay Selection Spinner -->
    <Spinner
        android:id="@+id/spinnerDelay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_no"
        android:layout_marginBottom="20dp" />


    <Button
        android:id="@+id/btnStartFakeCall"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Start Fake Call"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#813cb9"
        android:layout_marginTop="20dp" />

</LinearLayout>