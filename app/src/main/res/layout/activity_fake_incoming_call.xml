<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FakeIncomingCall">

    <ImageView
        android:id="@+id/callerImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/baseline_person_25"
        android:scaleType="centerCrop"/>

    <!-- Caller Name -->
    <TextView
        android:id="@+id/tvCallerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callerImage"
        android:layout_centerHorizontal="true"
        android:text="Laxmi "
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <!-- Incoming Call Text -->
    <TextView
        android:id="@+id/incomingCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming Call..."
        android:textSize="18sp"
        android:textColor="#AAAAAA"
        android:layout_below="@id/tvCallerName"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvCallerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9769694207"
        android:textSize="18sp"
        android:textColor="#AAAAAA"
        android:layout_below="@id/incomingCall"
        android:layout_centerHorizontal="true"/>
    <!-- Accept Call Button -->
    <ImageButton
        android:id="@+id/btnAnswer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_call"
        android:contentDescription="acept"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="60dp"
        android:background="@null"
        android:scaleType="fitXY"/>

    <!-- Decline Call Button -->
    <ImageButton
        android:id="@+id/btnDecline"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:contentDescription="reject"
        android:src="@drawable/ic_end_call"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="60dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:scaleType="fitXY"/>
</RelativeLayout>