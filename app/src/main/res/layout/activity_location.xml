<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#e6d2f2"
    tools:context=".LocationActivity">

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/back"
        android:id="@+id/backToDashboard"
        android:contentDescription="back to home page"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get your current loaction !!"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#813cb9"
        android:textSize="28sp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/txtLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Latitude: "
        android:textSize="22sp"
        android:textColor="#4A148C"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Longitude: "
        android:textSize="22sp"
        android:textColor="#4A148C"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Address: "
        android:textSize="22sp"
        android:textColor="#4A148C"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGetLocation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_yes"
        android:text="Get Current Location"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/contactListView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:paddingBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendLocation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button_yes"
        android:text="Send Location "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>