<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FakeCallAnswered">

    <ImageView
        android:id="@+id/callerImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/baseline_person_25"
        android:scaleType="fitCenter"/>

    <!-- Caller Name -->
    <TextView
        android:id="@+id/caller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laxmi "
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/callerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- Caller Number -->
    <TextView
        android:id="@+id/caller_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9769694207"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/caller_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"/>

    <!-- Call Timer -->
    <TextView
        android:id="@+id/callTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/caller_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <!-- Call Function Buttons (Speaker, Mute, Dialpad) -->
    <GridLayout
        android:id="@+id/callOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callTimer"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="40dp">

        <LinearLayout android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnRecord"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_record"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:background="@null"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="49dp"
                android:text="Record"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginRight="7dp"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnVideo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_video"
                android:background="@null"
                android:layout_marginRight="45dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:textAlignment="center"
                android:text="Video"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_add_call"
                android:background="@null"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="62dp"
                android:text="Add call"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </GridLayout>

    <GridLayout
        android:id="@+id/callEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callOptions"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginTop="15dp">

        <LinearLayout android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnSpeaker"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_speaker"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="54dp"
                android:text="Speaker"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginRight="7dp"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnDialpad"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="45dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dialpad" />
            <TextView
                android:layout_height="40dp"
                android:layout_width="55dp"
                android:text="Dialpad"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout android:orientation="vertical">
            <ImageButton
                android:id="@+id/btnMute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_mute"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_height="30dp"
                android:layout_width="50dp"
                android:text=" Mute"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </GridLayout>

    <!-- End Call Button -->
    <ImageButton
        android:id="@+id/btn_end_call"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_end_call"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"/>

</RelativeLayout>