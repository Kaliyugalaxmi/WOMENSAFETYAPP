<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PoliceForgot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".PoliceForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Police Badge Icon -->
        <ImageView
            android:id="@+id/policeBadgeIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/police_badge" />

        <!-- Forgot Password Title -->
        <TextView
            android:id="@+id/tvForgotPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Forgot Password"
            android:textSize="26sp"
            android:textColor="#813cb9"
            android:textStyle="bold"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:text="Enter your registered email to receive reset instructions."
            android:textSize="14sp"
            android:textColor="#666666"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Email"
            android:padding="14dp"
            android:textColor="#4A4A4A "
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/button_no"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="10dp"/>

        <!-- Reset Password Button -->
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#813cb9"
            android:text="Reset Password"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <!-- Back to Login Option -->
        <TextView
            android:id="@+id/tvBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Back to Login"
            android:textColor="#813cb9"
            android:textSize="14sp"/>
    </LinearLayout>
</ScrollView>
