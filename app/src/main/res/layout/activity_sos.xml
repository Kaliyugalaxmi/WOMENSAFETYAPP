<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#e6d2f2"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sos">

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/back"
        android:id="@+id/backToDashboard"
        android:contentDescription="back to home page"
        android:background="@android:color/transparent"/>

    <View
        android:id="@+id/circle3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/pulse_circle3"
        android:layout_centerInParent="true"/>

    <View
        android:id="@+id/circle2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/pulse_circle2"
        android:layout_centerInParent="true"/>

    <View
        android:id="@+id/circle1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/pulse_circle1"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="SOS"
        android:layout_centerInParent="true"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textSize="48sp"
       />

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="“Feel unsafe? Press the button to send a safety alert to your contacts.”"
        android:textColor="#4A148C"
        android:textSize="20sp" />

</RelativeLayout>